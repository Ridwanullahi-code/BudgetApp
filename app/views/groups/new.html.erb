<div class="container d-flex flex-column justify-content-between h-sceeen bg-light px-0 mx-auto">
  <%= form_for @group do |f| %>
  <div class="flex justify-between items-center bg-blue-600 py-4 px-2">
    <%= link_to groups_path do %>
    <span class="text-white" style="font-size:24px;">&#10229;</span>
    <% end %>
    <span class="uppercase text-white">New Category</span>
    <%= f.submit "Save", class: "text-white p-1 font-semibold cursor-pointer" %>
  </div>
  <fieldset class="flex flex-col mt-6">
    <%= f.text_field :name, placeholder: "Category Name", required: true, class: "block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>

    <label class="mt-3">Add Icon</label>
    <%= f.file_field :icon, required: true, class: "block w-full py-3 text-gray-700 bg-white border rounded-lg px-11 dark:bg-gray-900 dark:text-gray-300 dark:border-gray-600 focus:border-blue-400 dark:focus:border-blue-300 focus:ring-blue-300 focus:outline-none focus:ring focus:ring-opacity-40" %>
    <%= f.hidden_field :author_id, value: current_user.id %>
</div>
</fieldset>
<% end %>
</div>